@model IEnumerable<ClassName>;

@{
    ViewData["Title"] = "Home Page";
}

<h2> Database Room</h2>

<ul>
    <li>
        <a asp-controller="Home" asp-action="CreateClass">
            Create Classroom
        </a>
    </li>
    <li>

        <a asp-controller="Home" asp-action="Display">
            Show all
        </a>
    </li>
    <li>

        <a asp-route-type="ASC" asp-controller="Home" asp-action="OtherDeplays">
            Order By Asc
        </a>
    </li>
    <li>

        <a asp-route-type="DSC" asp-controller="Home" asp-action="OtherDeplays">
            Order By Dsc
        </a>
    </li>
  
</ul>


@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div class="div1">
            <hr>
            <p>Class name: @item.ClassID</p>
            <span>
                <a asp-route-id="@item.Id" asp-controller="Home" asp-action="DeleteClass">Delete</a>
                <a asp-route-id="@item.ClassID" asp-controller="Home" asp-action="Create">Add Student</a>
                <a asp-route-className="@item.ClassID" asp-controller="Home" asp-action="SeeStudent">See Student</a>
            </span>
            <hr>
        </div>

    }
}
else
{
    <p> No Result found</p>

}
