@model IEnumerable<Practice.Models.StudentDetails>

@{
    ViewData["Title"] = "OtherDeplays";
}



@if (ViewBag.type == "ASC")
{
    <h1>Order Of Student Name in Ascending Order</h1>

}
@if (ViewBag.type == "DSC")
{
    <h1>Order Of Student Name in Decending Order</h1>

}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StdAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentBirthday)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count() ; i++)
        {
            <tr>
                <td>
                   @(i+1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ElementAt(i ).ClassName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ElementAt(i).StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ElementAt(i).StudentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ElementAt(i).StdAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ElementAt(i).DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ElementAt(i).StudentBirthday)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Model.ElementAt(i).Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@Model.ElementAt(i).Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
