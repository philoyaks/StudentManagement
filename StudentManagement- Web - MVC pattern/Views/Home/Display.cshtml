@model IEnumerable<Practice.Models.StudentDetails>

@{
    ViewData["Title"] = "Display";
    int i = 1;
}



@if (TempData["ClassName"] != null)
{
    <h1>
        Class Name:  @TempData["ClassName"]
    </h1>
    <br />
    <p>
        <a asp-route-id="@TempData["ClassName"]" asp-action="Create">Add Student</a>
        <a asp-action="Index">Back To Homepage</a>
    </p>
}
else
{
    <h1>
        Display for All students
    </h1>
    <br />
    <p>
        <a asp-action="Index">Back To Homepage</a>
    </p>

    <form asp-controller="Home" asp-action="SearchStudentDetails" method="get">
        <p>
            Search Student Name: <input type="text" name="SearchString" />
            <input type="submit" value="Submit" />
        </p>
    </form>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            @if (TempData["ClassName"] == null)
            {
                <th>
                    @Html.DisplayNameFor(model => model.ClassName)
                </th>

            }

            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                dbStudentID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StdAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentBirthday)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @i
                </td>
                @if (TempData["ClassName"] == null)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassName)
                    </td>

                }

                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StdAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentBirthday)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    @Html.ActionLink("Delete", "DeleteStudentDetails", new { id = item.Id })
                </td>
            </tr>

            i = i + 1;




        }
    </tbody>
</table>
